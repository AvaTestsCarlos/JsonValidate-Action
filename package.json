{
  "name": "json-validate",
  "version": "1.0.0",
  "private": false,
  "description": "Validates a JSON file against a given schema using AJV.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Zingabopp/JsonValidate-Action.git"
  },
  "keywords": [
    "json",
    "json-schema",
    "validate",
    "ajv",
    "actions"
  ],
  "author": "Zingabopp",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "ajv": "^6.12.6",
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@types/jest": "^24.9.1",
    "@types/node": "^12.19.16",
    "@typescript-eslint/parser": "^2.34.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "js-yaml": "^3.14.1",
    "kind-of": "^6.0.3",
    "minimist": "^1.2.6",
    "prettier": "^1.19.1",
    "ts-jest": "^24.3.0",
    "typescript": "^3.9.9"
  }
}
